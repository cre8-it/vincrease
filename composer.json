{
    "name": "cre8-it/vincrease",
    "homepage": "https://cre8-it.de/",
    "description": "A Package to increase a Version-Number .env key mainly for continuous deployment",
    "type": "library",
    "license": "MIT",
    "keywords": ["versioning", "env", "laravel", "deployment"],
    "version": "1.0.0",
    "require": {
        "php": "^8.1",
        "laravel/framework": "^10.0|^11.0"
    },
    "require-dev": {
        "laravel/pint": "^1.20",
        "mockery/mockery": "^1.6",
        "orchestra/testbench": "^8.0|^9.9",
        "pestphp/pest": "^3.7",
        "rector/rector": "^2.0"
    },
    "autoload": {
        "psr-4": {
            "Cre8it\\Vincrease\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "cre8-it",
            "email": "info@cre8-it.de"
        }
    ],
    "minimum-stability": "stable",
    "extra": {
        "laravel": {
            "providers": [
                "Cre8it\\Vincrease\\VincreaseServiceProvider"
            ]
        }
    },
    "config": {
        "sort-packages": true,
        "preferred-install": "dist",
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "scripts": {
        "refactor": "vendor/bin/rector",
        "lint": "vendor/bin/pint",
        "test:refactor": "rector --dry-run",
        "test:lint": "pint --test",
        "test:types": "phpstan analyse src/ --ansi --level=7",
        "test:unit": "vendor/bin/pest --colors=always --coverage --parallel --min=100",
        "fix": [
            "@refactor",
            "@lint"
        ],
        "test": [
            "@test:refactor",
            "@test:lint",
            "@test:types",
            "@test:unit"
        ]
    }
}
